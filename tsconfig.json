{
  "compilerOptions": {
   "target": "ES2017",
    "module": "commonjs",
    "lib": [ "es2017" ] ,
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "importHelpers": false,
    "strict": true,
    "strictNullChecks": false,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "types": ["jest"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
  },
  "exclude": ["node_modules", "src/**/__mocks__", "**/*.spec.ts"],
  "include": ["src/**/*"]
}
